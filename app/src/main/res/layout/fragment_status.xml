<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="52dp"
    tools:context=".Fragments.StatusFragment">


   <ImageView
      android:id="@+id/location"
       android:layout_width="50dp"
       android:layout_marginTop="27dp"
       android:layout_height="50dp"/>
   <TextView
       android:layout_width="200dp"
       android:layout_height="50dp"
      android:gravity="bottom"
       android:textSize="24sp"
       android:padding="5dp"
       android:id="@+id/locationName"
       android:layout_marginLeft="50dp"
       android:layout_marginTop="30dp"
       android:textColor="#519259"
       android:textStyle="bold"/>





      <HorizontalScrollView
          android:layout_width="380dp"
          android:layout_height="wrap_content"
          android:scrollbars="none">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:orientation="horizontal">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:background="@drawable/rec2"
          android:layout_marginLeft="10dp"
          android:elevation="10dp"
          android:layout_marginTop="140dp">


         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/layout1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="12dp">

            <TextView
                android:layout_width="170dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="30dp"
                android:text="Temprature"
                android:id="@+id/data1"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="170dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@+id/data1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16sp"

                android:id="@+id/data2"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/data3"
                android:layout_width="150dp"
                android:layout_height="120dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@+id/data2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16sp"

                android:text="Pressure"
                android:layout_marginTop="40dp"
                android:id="@+id/data4"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@+id/data4"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16sp"

                android:padding="5dp"
                android:id="@+id/data5"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@+id/data2"
                app:layout_constraintLeft_toRightOf="@id/data4"
                android:textSize="16sp"

                android:layout_marginTop="40dp"
                android:id="@+id/data6"
                android:text="Humidity"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@+id/data6"
                app:layout_constraintLeft_toRightOf="@id/data5"
                android:textSize="16sp"

                android:id="@+id/data7"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="5dp"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Description"
                app:layout_constraintTop_toBottomOf="@+id/data2"
                app:layout_constraintLeft_toRightOf="@id/data6"
                android:textSize="16sp"

                android:layout_marginTop="40dp"
                android:id="@+id/data8"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@+id/data8"
                app:layout_constraintLeft_toRightOf="@id/data7"
                android:textSize="16sp"

                android:id="@+id/data9"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>




         </androidx.constraintlayout.widget.ConstraintLayout>
      </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:layout_marginTop="140dp"
       android:background="@drawable/rec2"
       android:layout_marginLeft="10dp"

       android:elevation="10dp"
       >


      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          android:padding="12dp">

      <TextView
          android:layout_width="170dp"
          android:layout_height="35dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          android:textSize="16sp"
          android:padding="5dp"
          android:layout_marginTop="30dp"
          android:text="Air Quality Index"
          android:id="@+id/data10"
          android:textColor="@color/black"
          android:textStyle="bold"/>
      <TextView
          android:layout_width="170dp"
          android:layout_height="35dp"
          app:layout_constraintTop_toBottomOf="@+id/data10"
          app:layout_constraintLeft_toLeftOf="parent"
          android:textSize="16sp"

          android:id="@+id/data11"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"/>
      <TextView
          android:id="@+id/data12"
          android:layout_width="150dp"
          android:layout_height="120dp"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="10dp"
          android:textColor="#116530"
          android:textAlignment="center"
          android:textStyle="bold"
          android:textSize="22sp"
          android:fontFamily="sans-serif-black"
          android:layout_marginRight="30dp"
          />
      <TextView
          android:layout_width="90dp"
          android:layout_height="35dp"
          app:layout_constraintTop_toBottomOf="@+id/data11"
          app:layout_constraintLeft_toLeftOf="parent"
          android:textSize="12sp"
          android:text="Co(ug/m^3)"
          android:layout_marginTop="40dp"
          android:id="@+id/data13"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"/>
      <TextView
          android:layout_width="90dp"
          android:layout_height="35dp"
          app:layout_constraintTop_toBottomOf="@+id/data13"
          app:layout_constraintLeft_toLeftOf="parent"
          android:textSize="12sp"

          android:padding="5dp"
          android:id="@+id/data14"
          android:textColor="@color/black"
          android:textStyle="bold"/>
      <TextView
          android:layout_width="90dp"
          android:layout_height="35dp"
          app:layout_constraintTop_toBottomOf="@+id/data11"
          app:layout_constraintLeft_toRightOf="@id/data13"
          android:textSize="12sp"

          android:layout_marginTop="40dp"
          android:id="@+id/data15"
          android:text="No(ug/m^3)"
          android:textColor="@color/black"
          android:padding="5dp"
          android:textStyle="bold"/>
      <TextView
          android:layout_width="90dp"
          android:layout_height="35dp"
          app:layout_constraintTop_toBottomOf="@+id/data15"
          app:layout_constraintLeft_toRightOf="@id/data14"
          android:textSize="12sp"

          android:id="@+id/data16"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:padding="5dp"/>
      <TextView
          android:layout_width="90dp"
          android:layout_height="35dp"
          android:text="So2(ug/m^3)"
          app:layout_constraintTop_toBottomOf="@+id/data11"
          app:layout_constraintLeft_toRightOf="@id/data15"
          android:textSize="12sp"
          android:layout_marginTop="40dp"
          android:id="@+id/data17"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"/>
      <TextView
          android:layout_width="90dp"
          android:layout_height="35dp"
          app:layout_constraintTop_toBottomOf="@+id/data17"
          app:layout_constraintLeft_toRightOf="@id/data16"
          android:textSize="12sp"

          android:id="@+id/data18"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"/>
         <TextView
             android:layout_width="90dp"
             android:layout_height="35dp"
             android:text="pm2_5"
             app:layout_constraintTop_toBottomOf="@+id/data11"
             app:layout_constraintLeft_toRightOf="@id/data17"
             android:textSize="12sp"

             android:layout_marginTop="40dp"
             android:id="@+id/data19"
             android:padding="5dp"
             android:textColor="@color/black"
             android:textStyle="bold"/>
         <TextView
             android:layout_width="90dp"
             android:layout_height="35dp"
             app:layout_constraintTop_toBottomOf="@+id/data17"
             app:layout_constraintLeft_toRightOf="@id/data18"
             android:textSize="12sp"

             android:id="@+id/data20"
             android:padding="5dp"
             android:textColor="@color/black"
             android:textStyle="bold"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </LinearLayout>


   </LinearLayout>
</HorizontalScrollView>




</FrameLayout>